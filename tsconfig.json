{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": [
      "es5",
      "es6",
      "ESNext"
    ],
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}