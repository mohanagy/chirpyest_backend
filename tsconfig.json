{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node", "mocha"],
    "lib": ["es5", "es6", "ESNext","ES2020"],
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./src/types/*",
      "./node_modules/@types"
  ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", ".nyc_output", ".coverage"],
  "extends": "./node_modules/@sentry/typescript/tsconfig.json",
  "parserOptions": {
    "debugLevel": true
  }
}
