{
  "name": "chirpyest-backend",
  "version": "1.0.0",
  "description": "Empowering everyday shoppers to earn money",
  "main": "index.js",
  "keywords": [],
  "author": "Kiitos",
  "license": "ISC",
  "scripts": {
    "init": "npm install",
    "start": "NODE_ENV=production node ./dist/bin/index.js",
    "dev": "cross-env NODE_ENV=development APP_ENV=development ts-node-dev --respawn --transpileOnly ./src/bin/index.ts",
    "heroku-postbuild": "npm run init && npm run tsc",
    "tsc": "tsc",
    "tsc-lint": "tsc --noEmit",
    "lint": "eslint '*/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "cross-env NODE_ENV=test mocha --exit",
    "test:local": "cross-env NODE_ENV=development APP_ENV=test mocha --exit",
    "test:local:watch": "cross-env NODE_ENV=development APP_ENV=test mocha -w",
    "test:local:report": "tsc && nyc npm run test:local",
    "seed:database:test": "cross-env NODE_ENV=development APP_ENV=test ts-node-dev ./src/database/build.script.ts",
    "seed:database:dev": "cross-env NODE_ENV=development APP_ENV=development ts-node-dev ./src/database/build.script.ts"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run tsc-lint && lint-staged && npm run test:local"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run lint:fix"
    ]
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@sentry/typescript": "^5.19.1",
    "@types/bluebird": "^3.5.32",
    "@types/chai": "^4.2.11",
    "@types/config": "0.0.36",
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^17.1.3",
    "@types/joi-password-complexity": "^3.1.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/jwk-to-pem": "^2.0.0",
    "@types/mocha": "^7.0.2",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.14",
    "@types/node-fetch": "^2.5.7",
    "@types/supertest": "^2.0.9",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "prettier-plugin-organize-imports": "^1.1.0",
    "source-map-support": "^0.5.19",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.49"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@sentry/node": "^5.19.1",
    "@types/datadog-winston": "^1.0.2",
    "amazon-cognito-identity-js": "^4.3.2",
    "aws-sdk": "^2.708.0",
    "config": "^3.3.1",
    "cookie-parser": "^1.4.5",
    "datadog-winston": "^1.5.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "express": "^4.17.1",
    "express-joi-validation": "^4.0.3",
    "http-status-codes": "^1.4.0",
    "joi-password-complexity": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.4",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.0",
    "pg": "^8.2.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.2.3",
    "typescript": "^3.9.5",
    "winston": "^3.3.3"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "reporter": [
      "text",
      "lcov"
    ]
  }
}
